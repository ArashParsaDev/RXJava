<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:padding="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cIV_main_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:civ_border_color="@color/black"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:fontFamily="cursive"
        android:id="@+id/tv_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/textcolor"
        android:text="arash parsa"
        android:textStyle="bold"
        android:layout_toRightOf="@id/cIV_main_profile"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        />

    <ImageView
        android:id="@+id/icon_location"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:src="@drawable/ic_baseline_location_on_24"
        android:layout_below="@id/tv_main_name"
        android:layout_toRightOf="@id/cIV_main_profile"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:fontFamily="cursive"
        android:id="@+id/tv_main_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/textcolor"
        android:text="location"
        android:textStyle="bold"
        android:layout_below="@id/tv_main_name"
        android:layout_toRightOf="@id/icon_location"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="4dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/cIV_main_profile"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="16dp"
        >
        <ImageView
            android:id="@+id/iv_main_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:gravity="center"
        android:id="@+id/linear_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/card"
        android:layout_marginTop="16dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_favorite_24"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:fontFamily="cursive"
            android:id="@+id/tv_main_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="85286"
            android:textSize="18sp"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="4dp"
            />



    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/card"
        android:layout_toRightOf="@id/linear_like"
        android:layout_marginTop="16dp"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_comment_24"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:fontFamily="cursive"
            android:id="@+id/tv_main_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="785752"
            android:textSize="18sp"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="4dp"
            />



    </LinearLayout>

    <TextView
        android:fontFamily="cursive"
        android:id="@+id/tv_main_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="des..."
        android:textSize="18sp"
        android:textColor="@color/textcolor"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/linear_like"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="8dp"
        />





</RelativeLayout>